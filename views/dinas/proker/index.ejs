<%- include('../layout/sidebar')%>
    <!-- Content -->
    <div class="px-8 py-6">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-bold text-blue-800">Daftar Program Kerja</h3>
            <a href="proker/create" class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700">
                <span class="text-lg font-semibold">+</span>
            </a>
        </div>

        <!-- List -->
        <div class="space-y-4">
            <!-- Populate proker var -->
            <% proker.forEach(proker => { %>
                <div class="flex justify-between items-center p-4 bg-blue-50 rounded-md shadow">
                    <span class="text-blue-800 font-medium"><%= proker.nama_proker %></span>
                    <div>
                        <a href="/dinas/proker/edit/<%= proker.id_proker %>" class="bg-amber-600 text-white px-4 py-2 rounded-md hover:bg-amber-700">Edit</a>
                        <a href="/dinas/proker/view/<%= proker.id_proker %>" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Lihat</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<%- include('../layout/footer.ejs')%>